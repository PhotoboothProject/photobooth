{
    "root": true,
    "env": {
        "browser": true,
        "es6": true,
        "jquery": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:n/recommended"
    ],
    "globals": {
        "config": true,
        "PhotoSwipe": true,
        "PhotoSwipeLightbox": true
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "n/no-process-exit": "off",
        "curly": "error",
        "default-case": "error",
        "dot-notation": "error",
        "eol-last": "error",
        "guard-for-in": "error",
        "no-bitwise": "off",
        "no-caller": "error",
        "no-debugger": "error",
        "no-empty": "error",
        "no-empty-function": ["error",
            {
            "allow": ["constructors"
                ]
            }
        ],
        "no-eval": "error",
        "no-fallthrough": "error",
        "no-new-wrappers": "error",
        "no-unused-labels": "error",
        "no-multi-spaces": "error",
        "no-var": "error",
        "no-case-declarations": "off",
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "radix": "error",
        "semi": "off",
        "space-infix-ops": "error"
    }
}
